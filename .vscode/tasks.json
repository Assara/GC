{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "custom-g++-build-cpp20",
      "type": "shell",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "-Wall",
        "-Wextra",
        "-std=c++20",
        "-g3",
        "${workspaceFolder}/main.cpp",
        "-o",
        "${workspaceFolder}/output/main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}